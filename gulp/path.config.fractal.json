{
	"public": "./deploy/library",
	"browserSync": {
		"server": {
			"baseDir": "deploy/library",
			"index": "index.html"
		}
	},

	"critical": {
		"templates": "./deploy/library/components/preview",
		"inputBase": "./deploy/library",
